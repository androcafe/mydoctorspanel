<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".LoginActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_hospital"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@raw/hospital_blue" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/white"
        android:background="@drawable/login_btn_bg"
        android:text="@string/string_sign_up"
        android:id="@+id/btn_sign_up"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorLogincreenBg"
        android:background="@drawable/login_btn_bg2"
        android:text="@string/string_sign_in"
        android:id="@+id/btn_sign_in"/>

</LinearLayout>