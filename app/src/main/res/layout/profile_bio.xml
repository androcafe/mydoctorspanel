<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_bio1">

    <RelativeLayout
        android:id="@+id/rl_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/profile_bg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:padding="5dp"
                    android:background="@drawable/profile_img"
                    android:src="@raw/doctor" />


            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:id="@+id/ll_bio2"
            android:focusableInTouchMode="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/hint_bio"
                android:id="@+id/tv_bio"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@drawable/profile_tv_bg"
                android:textColor="@color/colorLogincreenBg"
                android:inputType = "textCapSentences"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:id="@+id/edt_bio" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_save"
                    android:text="@string/btn_save"
                    android:background="@drawable/login_btn_bg"
                    android:textColor="@android:color/white" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
