<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/home_grid_unselected"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:id="@+id/ll_cancel_apmt">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@raw/calendar_cancel_apmt"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/string_cancel_apmt"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/home_grid_unselected"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:id="@+id/ll_change_apmt">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@raw/calendar_change_schedule"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/string_change_scedule"/>


            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/home_grid_selected"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/ll_today_apmt">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@raw/calendar"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorWhite"
                android:text="@string/string_today_scedule"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
